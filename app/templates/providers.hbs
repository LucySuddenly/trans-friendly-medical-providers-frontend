<div id="container">
  <h1>Trans-Friendly Medical Providers</h1>
  {{#g-map lat="39.0986106" lng="-98.6166598" zoom=4 as |g|}}
    {{#each this.model as |provider|}}
      {{#g.marker lat=provider.latlon.[0] lng=provider.latlon.[1] as |m|}}
        {{#m.infoWindow }}
          {{provider.name}}
        {{/m.infoWindow}}
      {{/g.marker}}
    {{/each}}
  {{/g-map}}

  <h2>Providers</h2>
  <div class="flex-container">
    {{#each this.model as |provider|}}
      <div class="provider-card">
        <h3>{{provider.name}}</h3>
        <h4>{{provider.description}}</h4>
        <a href={{provider.website}}>Website</a>
        <div class="address-box">
          <p>{{provider.address1}}</p>
          <p>{{provider.address2}}</p>
          <p>{{provider.city}}</p>
          <p>{{provider.state}}</p>
          <p>{{provider.zip}}</p>
        </div>
        <p>{{provider.phone}}</p>
      </div>
    {{/each}}
  </div>
</div>


{{outlet}}